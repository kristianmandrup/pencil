inline-block()
	display inline-block
	position relative
	
background-gradient(from, to)
	background -moz-linear-gradient(top, from, to) to
	background -webkit-gradient(linear, left top, left bottom, from(from), to(to)) to
	background linear-gradient(top, from, to) to

.x-button
	inline-block()
	user-select none
	color #444444
	font-weight bold
	font-smoothing antialiased
	font-size 11px
	text-align center
	text-decoration none
	vertical-align middle
	background-color #f5f5f5
	background-gradient #f5f5f5 #f1f1f1
	border 1px solid #DCDCDC
	border-radius 2px 2px 2px 2px
	line-height 27px
	list-style none outside none
	margin 0 14px 0 0
	min-width 54px
	outline medium none
	padding 0 4px
	white-space nowrap
	
	&:active
	&.active
	&:focus
	&.focus
		border-color #4D90FE
		z-index 2
	
	&:hover
		background-color #f8f8f8
		background-gradient #f8f8f8 #f1f1f1
		box-shadow 0 1px 1px rgba(0, 0, 0, 0.1)
		border-color #c6c6c6
		color #333
		z-index 2

	&:active
	&.active
		background-color #eeeeee
		background-gradient #eeeeee #e0e0e0
		box-shadow 0 1px 2px rgba(0, 0, 0, 0.1) inset
		border-color #cccccc
		color #333
	
	&.disabled
	&:disabled
		background-gradient #F5F5F5, #F1F1F1
		color #888888
		opacity 0.5

	&.x-allow
		background-gradient #4D90FE #4787ED
		color white
		border-color #3079ED
	
		&:hover
			background-gradient #4D90FE #357ae8
			box-shadow 0 1px 1px rgba(0, 0, 0, 0.2)
			border-color #2f5bb7
	
		&:active
		&.active
		&:focus
		&.focus
			background-gradient #DD4B39 #b0281a
			background #4d90fe

	&.x-deny
		background-gradient #DD4B39 #D14836
		color white
		border-color transparent
	 
		&:hover
			background-gradient #DD4B39 #c53727
			box-shadow 0 1px 1px rgba(0, 0, 0, 0.2)
			border-color #b0281a
	
		&:active
		&.active
		&:focus
		&.focus
			background-gradient #DD4B39 #b0281a
	
	> .x-arrow
	> .x-text
	> .x-ico
		display inline-block
		position relative
		vertical-align middle
	> .x-arrow
	> .x-ico
		background transparent url('data:;base64,') no-repeat 0 0
	> .x-arrow
		font-size 0
		height 6px
		margin-left 3px
		width 7px
		background-position -49px -93px
	> .x-text
		line-height 20px
		margin-top -2px
	> .x-ico
		font-size 0
		height 21px
		width 21px
		margin-top -3px

		&.x-ico-clip
			background-position 0 0
		&.x-ico-balloon
			background-position -21px 0
		&.x-ico-calendar
			background-position -42px 0
		&.x-ico-phone
			background-position -63px 0
		&.x-ico-buzz
			background-position -84px 0
		&.x-ico-settings
			background-position 0 -21px
		&.x-ico-prev
			background-position -21px -21px
		&.x-ico-next
			background-position -42px -21px
		&.x-ico-refresh
			background-position -63px -21px
		&.x-ico-inbox
			background-position -84px -21px
		&.x-ico-back
			background-position 0 -42px
		&.x-ico-mark
			background-position -21px -42px
		&.x-ico-alert
			background-position -42px -42px
		&.x-ico-trash
			background-position -63px -42px
		&.x-ico-folder
			background-position -84px -42px
		&.x-ico-forward
			background-position 0 -63px
		&.x-ico-forwards
			background-position -21px -63px
		&.x-ico-right
			background-position -42px -63px
		&.x-ico-blank
			background-position -63px -63px
		&.x-ico-print
			background-position -84px -63px
		&.x-ico-up
			background-position 0 -84px
		&.x-ico-down
			background-position -21px -84px
		&.x-ico-mail
			background-position -63px -84px


.x-toolbar-item
	min-width 46px
	padding 0 10px
	margin 5px 3px 0 0
	line-height 24px
	height 25px
	background none
	border-color transparent
	opacity 0.7

	&:hover
		opacity 0.9

	&:active
		opacity 1 




.x-button
	input
		margin 1px -2px 0

	&.x-position-left
	&.x-position-center
		margin-right 0
		border-top-right-radius 0
		border-bottom-right-radius 0

	&.x-position-right
	&.x-position-center
		margin-left -5px
		border-top-left-radius 0
		border-bottom-left-radius 0