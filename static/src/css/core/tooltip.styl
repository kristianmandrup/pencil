.x-tooltip
	display none
	z-index 3
	position relative
	line-height 30px
	text-align center
	background-color #FFFFFF
	border 1px solid $border
	padding 0 4px
	pointer-events none
	
	.x-tooltip-body
		//
	
	.x-tooltip-arrow
		background transparent
		
		.x-tooltip-arrow-before
		.x-tooltip-arrow-after
			position absolute
			height 0
			width 0
			border 10px solid transparent
			border-color transparent

		&.x-tooltip-arrow-top-left
			//
			.x-tooltip-arrow-before
				border-bottom-color $border
				top -21px
				left 10px
			.x-tooltip-arrow-after
				border-bottom-color #FFFFFF
				top -20px
				left 10px

		&.x-tooltip-arrow-top-center
			//
			.x-tooltip-arrow-before
				border-bottom-color $border
				top -21px
				left 50%
				margin-left -10px
			.x-tooltip-arrow-after
				border-bottom-color #FFFFFF
				top -20px
				left 50%
				margin-left -10px

		&.x-tooltip-arrow-top-right
			//
			.x-tooltip-arrow-before
				border-bottom-color $border
				top -21px
				right 10px
			.x-tooltip-arrow-after
				border-bottom-color #FFFFFF
				top -20px
				right 10px





		&.x-tooltip-arrow-right-top
			//
			.x-tooltip-arrow-before
				border-left-color $border
				top 10px
				right -21px
			.x-tooltip-arrow-after
				border-left-color #FFFFFF
				top 10px
				right -20px

		&.x-tooltip-arrow-right-center
			//
			.x-tooltip-arrow-before
				border-left-color $border
				right -21px
				top 50%
				margin-top -10px
			.x-tooltip-arrow-after
