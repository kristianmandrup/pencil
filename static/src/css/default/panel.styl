	.x-panel-body-default
		font-size 12px
		border-color #E5E5E5
		border-color rgba(0, 0, 0, 0.1)

	.x-mask
		background #F5F5F5

	.x-mask-body
		background-color #F5F5F5
		border-radius 4px
		border-color #E5E5E5
		border-color rgba(0, 0, 0, 0.1)
		box-shadow 1px 1px 1px rgba(0, 0, 0, 0.1)
		
		& > span
			background transparent url(/loader.gif) no-repeat 10px 5px
			padding 0 10px 0 35px

